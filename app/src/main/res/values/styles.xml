<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.DayNight">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="android:colorBackground">@color/background</item>
		<item name="actionBarStyle">@style/ToolbarStyle</item>
	</style>

	<style name="ToolbarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid">
		<item name="background">@color/actionBarBackground</item>
	</style>

	<style name="AboutTheme">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="StenoKey">
		<item name="android:gravity">center</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">@color/stenoKeyText</item>
		<item name="android:typeface">monospace</item>
		<item name="android:background">@drawable/steno_key</item>
		<item name="layout_columnWeight">1</item>
		<item name="layout_rowWeight">1</item>
	</style>

	<style name="SpecialStenoKey" parent="StenoKey">
		<item name="android:textColor">@color/specialStenoKeyText</item>
		<item name="android:background">@drawable/special_steno_key</item>
	</style>

</resources>
